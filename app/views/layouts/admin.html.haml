%html
  %head
    %title irootd demo
    = csrf_meta_tag
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/admin.css'
    = javascript_include_tag :defaults
    = yield :head
  %body.one-col
    #container
      #header
        %h1 irootd - functional iteration #1
        = link_to 'Users', admin_users_path
        = link_to 'Metadata', admin_meta_data_path
        = link_to 'Categories', admin_categories_path
        = link_to 'Intrigue', admin_intrigue_items_path
        - if notice
          %p * * *  #{notice} * * *
      #content
        = yield
      #footer
        %p This is a functional prototype and does not represent the final product.

